<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="ScheduleMapper">
  
  <insert id="insertSchedule">
  	INSERT INTO SCHEDULE(NO,WRITER_NO,TITLE,CONTENT,SC_DATE,DEL_YN,CODE) 
  	VALUES(SEQ_MEMBER_NO.NEXTVAL,#{writerNo},#{title},#{content},SYSDATE,'N',#{code})
  </insert>
  
  <select id="getScheduleList" resultType="com.kh.love.schedule.vo.scheduleVo">
    SELECT NO,WRITER_NO,TITLE,CONTENT,SC_DATE,DEL_YN,CODE 
    FROM SCHEDULE
    WHERE DEL_YN = 'N'
    <if test="type == 'title'">
		AND TITLE LIKE '%${value}%'
	</if>
	
	<if test="type == 'content'">
		AND CONTENT LIKE '%${value}%'
	</if>
	
  </select>
  
  
</mapper>